<component
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <!-- include batik in PLUS build via copying jars from lib/ folder below -->
      <excludes>
        <exclude>batik:*</exclude>
        <exclude>js:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>lib/native/**</include>
      </includes>
      <excludes>
        <!--already in core package, leads to 'want to overwrite?' warning during unzipping if packed two times-->
        <exclude>lib/native/readme.txt</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>lib/plus</directory>
      <outputDirectory>/lib/ext</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>lib/</directory>
      <outputDirectory>/lib/</outputDirectory>
      <includes>
        <include>batik-*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</component>