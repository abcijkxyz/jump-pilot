
<project name="PostGISPlugIn142" default="compile" basedir=".">
   
    <!--************************************************************************
    ****************************************************************************
    **                                 PROPERTIES                             **
    ****************************************************************************
    *************************************************************************-->

    <property name="PostGISPlugIn" value="PostGISPlugIn"/>

    <!-- PROPERTIES : MAIN ARCHITECTURE -->
    <property name="src"     value="src" />
    <property name="bin"     value="bin" />
    <property name="lib"     value="lib" />
    <property name="build"   value="build" />
    <property name="dist"    value="dist" />
    <property name="javadoc" value="javadoc" />
    <property name="res"     value="resources" />

    <property name="version" value="1.5.0" />
    
    <!-- =================================================================== -->
    <!-- Defines the classpath used for compilation and test.                -->
    <!-- =================================================================== -->
    <path id="classpath">
        <fileset dir="${lib}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <target name="clean" id="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>
    
    <!-- =================================================================== -->
    <!-- compile PostGISPlugIn                                               -->
    <!-- =================================================================== -->
    <target name="compile" id="compile" depends="clean">
        <mkdir dir="${build}"/>
        <javac destdir="${build}" 
               debug="true" 
               deprecation="false" 
               nowarn="true"
               source="1.5"
               target="1.5">
            <src path="${src}"/>
            <classpath refid="classpath"/>
            <include name="**/*.java"/>
            <include name="**/*.java"/>
        </javac>
        <copy todir="${build}/net/refractions/postgis">
            <fileset dir="${src}/main/resources/net/refractions/postgis">
                <include name="language/*.properties"/>
                <include name="*.gif"/>
            </fileset>
            <!--fileset dir="${src}">
                <include name="net/**/*.png"/>
                <include name="net/**/*.properties"/>
                <include name="net/**/*.html"/>
            </fileset-->
        </copy>
        <copy file="readme.txt" todir="${build}"/>
    </target>
    
    <!-- =================================================================== -->
    <!-- jar PostGISPlugIn                                                   -->
    <!-- =================================================================== -->
    <target name="jar" id="jar" depends="compile">
        <mkdir dir="${dist}"/>
        <jar basedir="${build}" jarfile="${dist}/${PostGISPlugIn}-${version}.jar">
            <include name="net/**/*"/>
            <include name="net/**/*.properties"/>
        </jar>
    </target>
    
    <!-- =================================================================== -->
    <!-- javadoc PostGISPlugIn                                               -->
    <!-- =================================================================== -->
    <target name="javadoc" depends="compile">
        <mkdir dir="${javadoc}"/>
        <javadoc destdir="${javadoc}" use="true">
            <classpath refid="classpath"/>
            <packageset dir="${src}/main/java">
                <include name="net/**"/>
            </packageset>
        </javadoc>
    </target>
    
    <!-- =================================================================== -->
    <!-- release PostGISPlugIn source and documentation                          -->
    <!-- =================================================================== -->
    <target name="release-postgis-plugin" id="release-postgis-plugin" depends="jar, javadoc">
        <zip basedir="." zipfile="${dist}/${PostGISPlugIn}-${version}.zip">
             <include name="src/main/java/**"/>
             <include name="src/main/resources/**"/>
             <include name="javadoc/**"/>
             <include name="${dist}/${PostGISPlugIn}-${version}.jar"/>
             <include name="build.xml"/>
             <include name="readme.txt"/>
             <include name="readme-dev.txt"/>
        </zip>
    </target>

</project>